<!DOCTYPE html>
<html>
  <head>
    <title>Cospace</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- <style>
      body {
        padding-top: 54px;
      }
      @media (min-width: 992px) {
        body {
          padding-top: 56px;
        }
      }
    </style> -->
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
      <div class="container">
        <!-- <a class="navbar-brand" href="#">Cospace</a> -->
        <!-- refractored above code to bottom code -->
        <%= link_to "Cospace", root_url, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
              <%= link_to "Home", root_url, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign in", new_member_session_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign up", new_member_registration_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'About', page_path('about'), class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Contact', page_path('contact'), class: "nav-link" %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <br/><br/>
          <p class="notice"><%= notice %></p>
          <p class="alert"><%=  alert %></p>
          <%= yield %>
        </div>
      </div>
    </div>
    
  </body>
</html>
