<div class="mx-auto" style="max-width: 23rem;">
  <div class="alert-danger">
    <%= devise_error_messages! %>
  </div>
  <div class="card text-center">
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-group"}) do |f| %>
        <h2 class="card-title">Sign up</h2>
        <p class="card-text">for cospace</p><br />

          <%= f.text_field :first_name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "Enter your name", required: true %>
          <br />
        
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your prefered email", required: true %>
          <br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter a unique password", required: true %>
       
          <br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm Password", required: true %>
        
        <div class="actions">
        <br />
          <%= f.submit "Sign up", class: "btn btn-secondary" %>
        </div>
        <br>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>
<%= render file: "pages/footer" %>


