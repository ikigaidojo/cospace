<div class="mx-auto" style="max-width: 35rem;">
  <div class="card text-center">
   <div class="card-body">
    <h2 class="card-title">New Room</h2>
      <%= form_for @room, html: { multipart: true }  do |f| %>
    <div class="form-group">
       <%= f.text_field :name, class: "form-control", placeholder: "Room Name" %>
    </div>

    <div class="form-group">
      <%= f.text_area :description, class: "form-control", placeholder: "Description" %>
    </div>
    <div class="form-group">
       <%= f.text_field :price, class: "form-control", placeholder: "Price" %>
    </div>

    <div class="form-group">
      <%= f.text_field :location, class: "form-control", placeholder: "Location" %>
    </div>

    <div class="form-group text-right">
      <%= f.submit 'Create Room', class: "btn btn-success" %>
      <%= link_to "Back", rooms_path, class: "btn btn-secondary" %>
    </div>
      <% end %>
    </div>
  </div>
</div>

