  <!-- Notification tab pane -->
  <div class="tab-pane fade show <%= notification(@active_panel) %>" id="pills-notification" role="tabpanel" aria-labelledby="pills-notification-tab">
    <div class="container-fluid">
      <h3 class="font-weight-bold text-left">Email Notification:</h3>
        <div class="form-group row">
          <div class="col-sm-2"></div>
          <div class="col-sm-10 text-left">
            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="checkbox" checked> <b>Reminder emails</b> - Stay up to date with your co-space.
              </label>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2"></div>
          <div class="col-sm-10 text-left">
            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="checkbox" checked> <b>Invoice emails</b> - Quickly received your invoices.
              </label>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2"></div>
          <div class="col-sm-10 text-left">
            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="checkbox" checked> <b>News emails</b> - Find out first about new products.
              </label>
            </div>
          </div>
        </div>
    </div>
  </div>
  <!-- Payment tab pane -->
  <div class="tab-pane fade show <%= payment_methods(@active_panel) %>" id="pills-payment" role="tabpanel" aria-labelledby="pills-payment-tab">
    <div class="container-fluid">
     <h3 class="font-weight-bold text-left">Credit Card Information:</h3>
      <form>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label font-weight-bold text-right">Name on Card</label>
          <div class="col-sm-10">
            <input type="email" class="form-control" placeholder="Name on Card">
          </div>
        </div>
         <div class="form-group row">
          <label class="col-sm-2 col-form-label font-weight-bold text-right">Credit Card Number</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Credit Card Number">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label font-weight-bold text-right">Expiration Date</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Expiration Date">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label font-weight-bold text-right">CVC</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="CVC">
          </div>
        </div>
        <div class="form-group row">
          <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-success">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </div>

</div> <!-- tab content end div -->

