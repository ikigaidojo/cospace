  <!-- Email Notification tab pane -->
  <div class="tab-pane fade show <%= notification(@active_panel) %>" id="pills-notification" role="tabpanel" aria-labelledby="pills-notification-tab">
    <div class="container">
      <div class="mx-auto" style="max-width: 35rem;">
        <div class="form-group row">
          <div class="col-sm-2"></div>
          <div class="col-sm-10 text-left">
            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="checkbox" checked> <b>Reminder emails</b> - Stay up to date with your co-space.
              </label>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2"></div>
          <div class="col-sm-10 text-left">
            <div class="form-check">
              <label class="form-check-label">
