<div class="col-12">
  <h1 class="text-left font-weight-bold"> Account Settings</h1>
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link<%= account_information(@active_panel) %>" id="pills-basic-tab" data-toggle="pill" href="#pills-basic" role="tab" aria-controls="pills-basic" aria-selected="false">Account Information</a>
      </li>
      <li class="nav-item">
        <a class="nav-link<%= password_reset(@active_panel) %>" id="pills-password-tab" data-toggle="pill" href="#pills-password" role="tab" aria-controls="pills-password" aria-selected="false">Password Reset</a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= notification(@active_panel) %>" id="pills-notification-tab" data-toggle="pill" href="#pills-notification" role="tab" aria-controls="pills-notification" aria-selected="false">Notification</a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= payment_methods(@active_panel) %>" id="pills-payment-tab" data-toggle="pill" href="#pills-payment" role="tab" aria-controls="pills-payment" aria-selected="false">Payment Methods</a>
      </li>
    </ul>
</div>

<!-- Tab content -->
<div class="tab-content" id="pills-tabContent">
  <!-- Account informaton tab pane -->
  <div class="tab-pane fade show<%= account_information(@active_panel) %>" id="pills-basic" role="tabpanel" aria-labelledby="pills-basic-tab">
    <div class="container-fluid">
      <h3 class="text-left font-weight-bold">Account Information</h3>
      <br/>
        <form>
          <div class="form-group row container">
            <label class="col-sm-2 col-form-label font-weight-bold text-right">First Name</label>
            <div class="col-sm-3">
              <input type="email" class="form-control" placeholder="First Name">
            </div>
            <label class="col-sm-2 col-form-label font-weight-bold text-right">Last Name</label>
            <div class="col-sm-3">
              <input type="email" class="form-control" placeholder="Last Name">
            </div>
          </div>   
          <!--<small id="passwordHelpBlock" class="form-text text-muted col text-left">
          Your public profile only shows your first name. When you request a booking, Launch Garage will see your first and last name.
          </small> -->
          <div class="form-group row container">
            <label class="col-sm-2 col-form-label font-weight-bold text-right">Email Address</label>
            <div class="col-sm-8">
              <input type="text" class="form-control" placeholder="Email">
            </div>
          </div>
          <div class="form-group row container">
            <label class="col-sm-2 col-form-label font-weight-bold text-right">I am</label>
            <div class="col-sm-4">
              <select class="form-control">
              <option value="Male">Gender</option>
              <option value="Male">Male</option>
              <option value="Female">Female</option>
              <option value="Male">Other</option>
              </select>
            </div>
          </div>
          <div class="form-group row container">
            <label class="col-sm-2 col-form-label font-weight-bold text-right">Phone Number</label>
            <div class="col-sm-4">
              <input type="text" class="form-control" placeholder="Phone Number">
            </div>
          </div>
          <div class="form-group row container">
            <div class= "col-sm-5">
              <button type="submit" class="btn btn-success">Save</button>
            </div>
          </div>
          <div class="form-group row container">
            <div class="col-sm-6">
              <button type="submit" class="btn btn-danger">Deactivate Account</button>
            </div>    
          </div>
        </form>
    </div>
  </div>
  <!-- Password reset tab pane -->
  <div class="tab-pane fade show<%= password_reset(@active_panel) %>" id="pills-password" role="tabpanel" aria-labelledby="pills-password-tab">
    <div class="container-fluid">
      <h4 class= "text-left font-weight-bold">Change Your Password</h4>
      
      <%= form_for(@member, url: { action: "update_password" } ) do |f| %>
         
         <div class="field row text-right font-weight-bold">
            <div class="col-sm-2 col-form-label font-weight-bold">
              <%= f.label :current_password, "Current Password" %> <br /> 
              <!--<i>(We need your current password to confirm your changes)</i><br /> -->
            </div>
            <div class="col-sm-2">
              <%= f.password_field :current_password %>
            </div>
        </div>
        <div class="field row text-right">
          <div class="col-sm-2 col-form-label font-weight-bold">
            <%= f.label :password, "Password" %><br />
          </div>
          <div class="col-sm-2">
            <%= f.password_field :password, :autocomplete => "off"  %>
          </div>
        </div>
        <div class="field row text-right">
          <div class="col-sm-2 col-form-label font-weight-bold">
            <%= f.label :password_confirmation %><br />
          </div>
          <div class="col-sm-2 col-form-label font-weight-bold">
          <%= f.password_field :password_confirmation %>
          </div>
        </div>
        <div class="action_container col-sm-6 ">
          <%= f.submit 'Update Password' %>
        </div>
      <% end %>
    </div>
  </div>

