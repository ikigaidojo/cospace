<h1 class="text-left"> Account Settings</h1>
  <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link<%= account_information(@active_panel) %>" id="pills-basic-tab" data-toggle="pill" href="#pills-basic" role="tab" aria-controls="pills-basic" aria-selected="false">Edit Profile</a>
    </li>
    <li class="nav-item">
      <a class="nav-link<%= password_reset(@active_panel) %>" id="pills-password-tab" data-toggle="pill" href="#pills-password" role="tab" aria-controls="pills-password" aria-selected="false">Change Password</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= notification(@active_panel) %>" id="pills-notification-tab" data-toggle="pill" href="#pills-notification" role="tab" aria-controls="pills-notification" aria-selected="false">Email Notification</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= payment_methods(@active_panel) %>" id="pills-payment-tab" data-toggle="pill" href="#pills-payment" role="tab" aria-controls="pills-payment" aria-selected="false">Payment Methods</a>
    </li>
  </ul>

<!-- Tab content -->
<div class="tab-content" id="pills-tabContent">
  <!-- Edit Profile tab pane -->
  <div class="tab-pane fade show<%= account_information(@active_panel) %>" id="pills-basic" role="tabpanel" aria-labelledby="pills-basic-tab">
    <div class="container">
      <div class="mx-auto" style="max-width: 30rem;">
        <%= form_for(@member, url: { action: "update_profile" } ) do |f| %>
        <%= puts "#{ap @member.errors}" %>
          <div class="form-group">
             <%= f.text_field :first_name, class: "form-control", placeholder: "First Name" %>
          </div>

          <div class="form-group">
            <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
          </div>
          <div class="form-group">
             <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
          </div>

          <div class="form-group">
              <%= f.select :gender, options_for_select([["Gender", ""],["Male", "Male"], ["Female", "Female"], ["Other", "Other"]]), {}, { class: "form-control" }%>
          </div>

          <div class="form-group">
            <%= f.text_field :phone_number, class: "form-control", placeholder: "Phone Number" %>
          </div>

          <div class="form-group text-right">
            <%= f.submit 'Update Profile', class: "btn btn-success" %>
          </div>
        <% end %>

        <div class="form-group text-right">
            <%= button_to "Deactivate Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %> 
        </div>
      </div>
    </div>
  </div>
  <!-- Change Password tab pane -->
  <div class="tab-pane fade show<%= password_reset(@active_panel) %>" id="pills-password" role="tabpanel" aria-labelledby="pills-password-tab">
    <div class="container">
      <div class="mx-auto" style="max-width: 30rem;">
         <%= form_for(@member, url: { action: "update_password" } ) do |f| %>
     
        <div class="form-group text-left">
         
          <%= f.password_field :current_password, class: "form-control", placeholder: "Current Password", required: true %>
        </div> 
        
        <div class="form-group text-left">
        
          <%= f.password_field :password, :autocomplete => "off",class: "form-control", placeholder: "New Password", required: true  %>
        </div>

        <div class="form-group text-left">
       
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Re-type Password", required: true%>
        </div>

        <div class="form-actions text-right">
          <%= f.submit 'Update Password', class: "btn btn-secondary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>

