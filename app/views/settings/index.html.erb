<!-- Tab content -->
<div class="tab-content" id="pills-tabContent">
  <!-- Account informaton tab pane -->
  <div class="tab-pane fade show active" id="pills-basic" role="tabpanel" aria-labelledby="pills-basic-tab">
    <div class="container-fluid">
      <h5 class="text-left font-weight-bold">Edit Account Information</h5>
      <br/>
        <form>
          <div class="form-group row container">
            <label class="col-sm-2 col-form-label font-weight-bold text-right">First Name</label>
            <div class="col-sm-3">
              <input type="email" class="form-control" placeholder="First Name">
            </div>
            <label class="col-sm-2 col-form-label font-weight-bold text-right">Last Name</label>
            <div class="col-sm-3">
              <input type="email" class="form-control" placeholder="Last Name">
            </div>
          </div>   
          <!--<small id="passwordHelpBlock" class="form-text text-muted col text-left">
          Your public profile only shows your first name. When you request a booking, Launch Garage will see your first and last name.
          </small> -->
          <div class="form-group row container">
            <label class="col-sm-2 col-form-label font-weight-bold text-right">Email Address</label>
            <div class="col-sm-8">
              <input type="text" class="form-control" placeholder="Email">
            </div>
          </div>
          <div class="form-group row container">
            <label class="col-sm-2 col-form-label font-weight-bold text-right">I am</label>
            <div class="col-sm-4">
              <select class="form-control">
              <option value="Male">Gender</option>
              <option value="Male">Male</option>
              <option value="Female">Female</option>
              <option value="Male">Other</option>
              </select>
            </div>
          </div>
          <div class="form-group row container">
            <label class="col-sm-2 col-form-label font-weight-bold text-right">Phone Number</label>
            <div class="col-sm-4">
              <input type="text" class="form-control" placeholder="Phone Number">
            </div>
          </div>
          <div class="form-group row container">
            <div class= "col-sm-5">
              <button type="submit" class="btn btn-success">Save</button>
            </div>
          </div>
          <div class="form-group row container">
            <div class="col-sm-6">
              <button type="submit" class="btn btn-danger">Deactivate Account</button>
            </div>    
          </div>
        </form>
    </div>
  </div>
  <!-- Password reset tab pane -->
  <div class="tab-pane fade" id="pills-password" role="tabpanel" aria-labelledby="pills-password-tab">
    <div class="container-fluid">
      <h5 class= "text-left font-weight-bold">Change Password</h5>
      <form>
        <div class="form-group row text-right">
          <label class="col-sm-2 col-form-label font-weight-bold">Old Password</label>
          <div class="col-sm-4">
            <input type="password" class="form-control" placeholder="Old Password">
          </div>
        </div>
        <div class="form-group row text-right">
          <label class="col-sm-2 col-form-label font-weight-bold">New Password</label>
          <div class="col-sm-4">
            <input type="password" class="form-control" placeholder="New Password">
          </div>
        </div>
        <div class="form-group row text-right">
          <label class="col-sm-2 col-form-label font-weight-bold">Confirm Password</label>
          <div class="col-sm-4">
            <input type="password" class="form-control" placeholder="Confirm Password">
          </div>
        </div>
      </form>
    </div>
    <div class="form-group row container">
      <div class="col-sm-9">
        <button type="submit" class="btn btn-danger">Update Password</button>
      </div>    
    </div>
  </div>
  <!-- Notification tab pane -->
  <div class="tab-pane fade" id="pills-notification" role="tabpanel" aria-labelledby="pills-notification-tab">
    <div class="container-fluid">
      <h5 class="text-left font-weight-bold">Notifications</h5>
      <div class="form-group row">
        <div class="col-sm-1"></div>
          <div class="form-check">
            <label class="form-check-label">
              <input class="form-check-input" type="checkbox" checked> <b>Reminders</b>  Receive booking reminders, requests to write a review, pricing notices, and other reminders related to your activities on CoSpace in your email.
            </label>
          </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-1"></div>
        <div class="form-check">
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" checked> <b>Invoices</b>  Quickly received your invoices.
          </label>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-1"></div>
        <div class="form-check">
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" checked> <b>Promotions</b> Receive coupons, promotions, surveys, product updates, and inspiration from CoSpace and its partners.Find out first about new products.
          </label>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-1"></div>
        <div class="form-check">
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" checked> <b>Policy and Community</b> -Receive updates on cospace regulations and stay informed about events in CoSpace       
          </label>
         </div>
      </div>
      <div class="form-group container-fluid">
        <div class="col-sm-2">
          <button type="submit" class="btn btn-success">Save</button>
        </div>    
      </div>
    </div>  
  </div>

  <!-- Payment tab pane -->
  <div class="tab-pane fade" id="pills-payment" role="tabpanel" aria-labelledby="pills-payment-tab">
     <div class="container-fluid">
      <div class="row">
        <div class="col-sm-6 col-sm-3 offset-sm-3">
          <div class="card ">
            <div class="card-header">
              <div class="row">
                <h5 class="text-center font-weight-bold">Payment Details</h5>
                <img class="img-fluid cc-img" src="http://www.prepbootstrap.com/Content/images/shared/misc/creditcardicons.png">
              </div>
            </div>
            <div class="card-block">
              <form role="form">
                <div class="row">
                  <div class="col-sm-12">
                    <div class="form-group">
                      <label>CARD NUMBER</label>
                      <div class="input-group">
                        <input type="tel" class="form-control" placeholder="Valid Card Number" />
                        <span class="input-group-addon"><span class="fa fa-credit-card"></span></span>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-4 col-sm-7">
                    <div class="form-group">
                      <label><span class="hidden-sm">EXPIRATION</span><span class="d-print-inline">DATE</span></label>
                      <input type="tel" class="form-control" placeholder="MM / YY" />
                    </div>
                  </div>
                  <div class="col-sm-5 col-sm-5 float-sm-right">
                    <div class="form-group">
                      <label>CV CODE</label>
                      <input type="tel" class="form-control" placeholder="CVC" />
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-12">
                    <div class="form-group">
                      <label>CARD OWNER</label>
                      <input type="text" class="form-control" placeholder="Card Owner Name" />
                    </div>
                  </div>
                </div>
              </form>
            </div>
            <div class="card-footer">
              <div class="row">
                <div class="col-xs-12">
                  <button class="btn btn-warning btn-lg btn-block">Add Card</button>
                </div>
              </div>
            </div>
          </div>
        </div>
